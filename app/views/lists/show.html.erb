<% if @list.editable_by?(current_user) %>
  <%= form_for([@list, @goal], :remote => true) do |f| %>
    <%= f.text_field :title, {:placeholder => "Add a goal"} %>
    <%= f.submit %>
  <% end %>
<% end %>
<ul id="goals">
  <% @list.goals.each do |goal| %>
    <li><%= link_to goal.title, goal_path(goal) %></li>
  <%end%>
</ul>

